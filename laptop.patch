From: Przemek Draganczuk <killermenpl@arch.home>
Date: Tue, 27 Jun 2017 21:53:10 +0200
Subject: [PATCH] Laptop

---
 .config/i3/config        |  7 +++-
 .config/polybar/config   | 96 ++++++++++++++++++++++++++++++++++++++++++------
 .config/polybar/launch   |  1 -
 .config/polybar/mpris.sh |  2 +-
 4 files changed, 91 insertions(+), 15 deletions(-)

diff --git a/.config/i3/config b/.config/i3/config
index 114cf96..e46dffb 100755
--- a/.config/i3/config
+++ b/.config/i3/config
@@ -201,7 +201,11 @@ assign [class="Pavucontrol"] $w10
 assign [class="Xfce4-terminal"] $w2
 assign [class="Eclipse"] $w3
 assign [class="itom"] $w3
-assign [class="krita"] $w4
+assign [class="krita"] $w6
+assign [class="Thunar"] $w4
+assign [class="Civ5XP"] $w5
+
+
 for_window [instance="Godot_Engine"] floating enable
 for_window [class="(?i)pamac-*"] floating enable
 for_window [class="(?i)feh*"] floating enable
@@ -210,7 +214,6 @@ for_window [class="xfce4-panel"] floating enable
 
 
 
-
 # Pulse Audio controls
 bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%        #increase sound volume
 bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%        #decrease sound volume
diff --git a/.config/polybar/config b/.config/polybar/config
index 7622061..50a6ce9 100644
--- a/.config/polybar/config
+++ b/.config/polybar/config
@@ -48,7 +48,7 @@ font-3 = FontAwesome:pixelsize=12;0
 
 modules-left = i3
 modules-center = date
-modules-right = volume memory cpu
+modules-right = volume memory cpu battery
 
 
 ;wm-restack = bspwm
@@ -59,16 +59,90 @@ wm-restack = i3
 ;scroll-up = bspwm-desknext
 ;scroll-down = bspwm-deskprev
 
+enable-ipc = true
+
 scroll-up = i3wm-wsnext
 scroll-down = i3wm-wsprev
 [bar/bar1]
 inherit = bar/base
-monitor = DVI-0
-modules-right = musicprev musicplaypause musicnext music volume memory cpu
+modules-right = musicprev musicplaypause musicnext music volume memory cpu battery
+
+[module/ewmh]
+type = internal/xworkspaces
 
-[bar/bar2]
-inherit=bar/base
-monitor=DVI-1
+; Only show workspaces defined on the same output as the bar
+;
+; Useful if you want to show monitor specific workspaces
+; on different bars
+;
+; Default: false
+pin-workspaces = false
+
+; Create click handler used to focus desktop
+; Default: true
+enable-click = true
+
+; Create scroll handlers used to cycle desktops
+; Default: true
+enable-scroll = true
+
+; Available tags:
+;   <label-monitor>
+;   <label-state> - gets replaced with <label-(active|urgent|occupied|empty)>
+; Default: <label-state>
+format = <label-state>
+
+; Available tokens:
+;   %name%
+; Default: %name%
+label-monitor = %name%
+
+; Available tokens:
+;   %name%
+;   %icon%
+;   %index%
+; Default: %icon%  %name%
+label-active = %icon% %name%
+label-active-foreground = #ffffff
+label-active-background = #3f3f3f
+label-active-underline = #fba922
+
+; Available tokens:
+;   %name%
+;   %icon%
+;   %index%
+; Default: %icon%  %name%
+label-occupied = %icon% %name%
+label-occupied-underline = #555555
+
+; Available tokens:
+;   %name%
+;   %icon%
+;   %index%
+; Default: %icon%  %name%
+label-urgent = %icon% %name%
+label-urgent-foreground = #000000
+label-urgent-background = #bd2c40
+label-urgent-underline = #9b0a20
+
+; Available tokens:
+;   %name%
+;   %icon%
+;   %index%
+; Default: %icon%  %name%
+label-empty = %icon% %name%
+label-empty-foreground = #55
+
+
+[module/xwindow]
+type = internal/xwindow
+#label = %title: 0:30:...%
+label = %title: %
+label-maxlen = 30
+#format-background = #808000
+format-background = #555555
+format-foreground = #FFFFFF
+format-padding = 2
 
 
 [module/apps]
@@ -81,7 +155,7 @@ click-left = ~/.config/polybar/pymenu.py
 type = custom/script
 interval = 1
 
-label = %output:0:45:...%
+label = %output:0:30:...%
 exec = ~/.config/polybar/mpris.sh
 
 [module/filesystem]
@@ -110,8 +184,8 @@ strip-wsnumbers = false
 ws-icon-0 = 1;
 ws-icon-1 = 2;
 ws-icon-2 = 3;
-ws-icon-3 = 4;4
-ws-icon-4 = 5;5
+ws-icon-3 = 4;
+ws-icon-4 = 5;
 ws-icon-5 = 6;6
 ws-icon-6 = 7;7
 ws-icon-7 = 8;8
@@ -192,7 +266,7 @@ format-muted-prefix = ""
 format-muted-foreground = ${colors.foreground}
 label-muted = sound muted
 
-bar-volume-width = 20
+bar-volume-width = 10
 bar-volume-foreground-0 = #acc267
 bar-volume-foreground-1 = #acc267
 bar-volume-foreground-2 = #acc267
@@ -216,7 +290,7 @@ adapter = ADP1
 full-at = 98
 
 format-charging = <animation-charging> <label-charging>
-format-charging-underline = #ffb52a
+format-charging-underline = 
 
 format-discharging = <ramp-capacity> <label-discharging>
 format-discharging-underline = ${self.format-charging-underline}
diff --git a/.config/polybar/launch b/.config/polybar/launch
index 45e0635..9d635f6 100755
--- a/.config/polybar/launch
+++ b/.config/polybar/launch
@@ -3,4 +3,3 @@ killall -q polybar
 while pgrep -x polybar >/dev/null; do sleep 1; done
 
 polybar bar1 &
-polybar bar2 &
diff --git a/.config/polybar/mpris.sh b/.config/polybar/mpris.sh
index 71071fc..c6e2ca1 100755
--- a/.config/polybar/mpris.sh
+++ b/.config/polybar/mpris.sh
@@ -6,7 +6,7 @@ icon=""
 
 player_status=$(playerctl status 2> /dev/null)
 if [[ $? -eq 0 ]]; then
-    metadata="$(playerctl metadata artist) - $(playerctl metadata title)"
+    metadata="$(playerctl metadata title)"
 fi
 
 # Foreground color formatting tags are optional
