mod4 + Return
	st

mod4 + d
	rofi -show drun

mod4 + F1
	$BROWSER

mod4 + F{2,3,4,5,6}
	st -e {calcurse,neomutt,newsboat,rtv,weechat}

mod4 + ctrl + l
	~/bin/lock

XF86Audio{Play,Prev,Next}
	playerctl {play-pause,previous,next}

alt + {Down,Left,Right}
	playerctl {play-pause,previous,next}

XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume 0 {+,-}5%

XF86AudioMute
	pactl set-sink-mute 0 toggle

XF86MonBrightness{Up,Down}
	xbacklight {+,-}5

mod4 + shift + w
	~/bin/wallpaper

mod4 + shift + e
	pkill xinit

Print
	~/bin/screenshot
