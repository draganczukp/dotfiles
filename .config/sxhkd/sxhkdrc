mod4 + Return
	alacritty

mod4 + d
	rofi -show drun

mod4 + F1
	vivaldi-stable

mod4 + F{2,3,4,5,12}
	alacritty -e {calcurse,neomutt,weechat,rainbowstream,spt}

mod4 + ctrl + l
	~/bin/lock

XF86Audio{Play,Prev,Next}
	playerctl {play-pause,previous,next}

XF86Explorer
	~/bin/toggle-touchpad

alt + {Down,Right}
	playerctl {play-pause,next}

XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume 0 {+,-}5%

XF86AudioMute
	pactl set-sink-mute 0 toggle

XF86MonBrightness{Up,Down}
	xbacklight {+,-}5

mod4 + shift + w
	~/bin/wallpaper

Print
	~/bin/screenshot

mod4 + F10
	~/bin/civ6-exploit
