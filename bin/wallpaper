#!/bin/zsh

# if [[ $HOST = laptop ]]; then
	# feh --bg-scale ~/Obrazy/Wallpapers/wallpaper.jpg
# else
	# gif-soup ~/Obrazy/Wallpapers/wallpaper.gif
# fi

wp=$(/bin/ls ~/Obrazy/Wallpapers/|shuf|head -n1)
echo $wp > /tmp/current-wallpaper
feh --bg-scale ~/Obrazy/Wallpapers/$wp
wal -i ~/Obrazy/Wallpapers/$wp -g -q -o ~/.config/qutebrowser/reload-qutebrowser.py

