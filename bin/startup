#!/bin/zsh

[ -e ~/.screenlayout/layout.sh ] && ~/.screenlayout/layout.sh &
setxkbmap -option caps:escape -layout pl &
~/bin/wallpaper &
~/bin/start-compton &
dunst &
qutebrowser &
spotify &
/usr/lib/kdeconnectd &
nm-applet &

~/bin/run-on-clock 1m ~/bin/checkmail &
~/bin/run-on-clock 5m ~/bin/check-phone &
~/bin/run-on-clock 2m ~/bin/refresh-news &

~/bin/battery-notify &

xset s 0
xset r rate 500 50
pgrep sxhkd || sxhkd &

udiskie -t2 &

disown

sleep 10s
wmname LG3D
